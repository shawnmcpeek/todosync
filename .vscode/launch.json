{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension in Cursor",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "runtimeExecutable": "cursor",
            "preLaunchTask": "npm: compile"
        }
    ]
}
